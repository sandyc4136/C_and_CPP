#ifndef ILLEGALARGUMENTEXCEPTION_
#define ILLEGALARGUMENTEXCEPTION_

#include<string>
using namespace std;

namespace exception{
	class IllegalArgumentException{
	private:
		const string message;
	public:
		IllegalArgumentException( string message = "Invalid argument" );

		string getMessage( void )const;
	};
}

#endif /* ILLEGALARGUMENTEXCEPTION_ */
